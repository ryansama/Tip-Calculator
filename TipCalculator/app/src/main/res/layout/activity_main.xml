<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context=".MainActivity">

    <!--<TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:text="Tip Calculator"
        android:textColor="#ff151515"
        android:textSize="34sp" />-->

    <TextView
        android:id="@+id/billText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Bill ($)"

        android:textSize="24sp" />

    <EditText
        android:id="@+id/billInput"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:paddingTop="16dp"
        android:textColor="#ff383838"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:text="Tip: "
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/tipInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="16dp"
            android:text="Split (#)"
            android:textSize="24sp" />

        <NumberPicker
            android:id="@+id/splitInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/abc_primary_text_material_dark" />

    </LinearLayout>

    <TextView
        android:id="@+id/tipDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:text="Tip "
        android:textSize="30sp" />

    <TextView
        android:id="@+id/totalDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="32dp"
        android:text="Total "
        android:textSize="30sp"
        android:textStyle="bold" />
</LinearLayout>
